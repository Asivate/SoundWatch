                    android:pathPrefix="/start-activity"
                    android:scheme="wear" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />

                <data
                    android:host="*"
                    android:pathPrefix="/audio-prediction"
                    android:scheme="wear" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />

                <data
                    android:host="*"
                    android:pathPrefix="/SOUND_ENABLE_FROM_PHONE_PATH"
                    android:scheme="wear" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />

                <data
                    android:host="*"
                    android:pathPrefix="/SEND_ALL_AUDIO_PREDICTIONS_FROM_PHONE_PATH"
                    android:scheme="wear" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />

                <data
                    android:host="*"
                    android:pathPrefix="/SEND_FOREGROUND_SERVICE_STATUS_FROM_PHONE_PATH"
                    android:scheme="wear" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />

                <data
                    android:host="*"
                    android:pathPrefix="/SEND_LISTENING_STATUS_FROM_PHONE_PATH"
                    android:scheme="wear" />
            </intent-filter>
        </service>
        <service
            android:name="edu.washington.cs.soundwatch.wear.service.ForegroundService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="microphone"
            android:process=":foreground" >
        </service>
        <service
            android:name="edu.washington.cs.soundwatch.wear.service.SnoozeSoundService"
            android:exported="false"
            android:process=":snooze" >
